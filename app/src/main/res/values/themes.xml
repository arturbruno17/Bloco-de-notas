<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BlocoDeNotas" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/shape</item>
        <item name="colorPrimaryVariant">@color/background_400</item>
        <item name="colorOnPrimary">@color/text1</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/shapeInactive</item>
        <item name="colorSecondaryVariant">@color/shapeInactive</item>
        <item name="colorOnSecondary">@color/text2</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Heading">
        <item name="android:textSize">20sp</item>
        <item name="lineHeight">30sp</item>
        <item name="fontFamily">@font/open_sans</item>
    </style>

    <style name="Body">
        <item name="android:textSize">14sp</item>
        <item name="lineHeight">21sp</item>
        <item name="fontFamily">@font/lato</item>
    </style>
</resources>