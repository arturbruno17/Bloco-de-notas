<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        tools:context=".views.CreateAnnotationFragment">

        <EditText
            android:id="@+id/edit_update_text_title"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:autofillHints="@string/title_hint"
            android:background="@color/background"
            android:ems="10"
            android:hint="@string/title_hint"
            android:inputType="textPersonName"
            android:textAppearance="@style/Heading"
            android:textColor="@color/text1"
            android:textColorHint="@color/text1Inactive"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/edit_update_text_message"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:autofillHints="@string/message_hint"
            android:background="#00F1F0EE"
            android:ems="10"
            android:gravity="start|top"
            android:hint="@string/message_hint"
            android:inputType="textMultiLine"
            android:textAppearance="@style/Body"
            android:textColorHint="#00F1F0EE"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edit_update_text_title" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>


